<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:focusable="true"
        android:layout_marginBottom="50dp"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/order_header_view_rl"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/order_header_logo_top"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="36dp">
            <TextView
                android:id="@+id/order_header_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:text="Micote Store"/>
            <ImageButton
                android:id="@+id/order_header_setting_bn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/setting_bn"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_below="@+id/order_header_logo_top"
            android:orientation="horizontal"
            android:background="@drawable/search_bg"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <Spinner
                android:id="@+id/order_super_table"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_height="match_parent"></Spinner>
            <Spinner
                android:id="@+id/order_sub_table"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:layout_height="match_parent"></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/order_header_logo_top"
            android:orientation="horizontal"
            android:background="@drawable/search_bg"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="48dp">
            <ImageView
                android:id="@+id/order_search_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="2dp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:src="@drawable/camera_bn"/>
            <EditText
                android:id="@+id/order_search_ed"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="46dp" />
            <Button
                android:id="@+id/order_search_bn"
                android:text="搜索"
                android:layout_marginLeft="2dp"
                android:textSize="14sp"
                android:layout_width="64dp"
                android:layout_height="48dp" />
        </LinearLayout>

    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/order_header_view_rl"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">
            <ListView
                android:id="@+id/order_launcher_listview"
                android:layout_width="0dp"
                android:layout_weight="29"
                android:layout_height="match_parent"
                ></ListView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/order_launcher_recyclerview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="14dp"
                android:layout_weight="85" />
        </LinearLayout>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#54c5c5c5"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">
        <Button
            android:id="@+id/order_bottom_order_bn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:text="订单详情"/>
        <RelativeLayout
            android:layout_toRightOf="@+id/order_bottom_order_bn"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/order_bottom_order_price_totle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总价"
                android:textColor="#33ff99"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/order_bottom_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="原价总价"

                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/order_bottom_reckoning_bn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="结算"/>
    </RelativeLayout>


</RelativeLayout>
