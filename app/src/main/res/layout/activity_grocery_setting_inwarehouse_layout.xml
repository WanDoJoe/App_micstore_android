<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    tools:context="com.wdq.micorestore.grocery.setting.inwarehouse.GrocerySettingInWarehouseActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
           <TextView

               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:text="@string/grocery_cqcode"></TextView>
            <EditText
                android:id="@+id/activity_grocery_setting_inwarehouse_ed_cqcode"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:focusable="false"
                android:layout_height="wrap_content"/>
            <ImageButton
                android:id="@+id/activity_grocery_setting_inwarehouse_bn_cqcode"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:background="#00ffffff"
                android:src="@drawable/camera_bn"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/grocery_code"></TextView>
            <EditText
                android:id="@+id/activity_grocery_setting_inwarehouse_ed_code"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/activity_grocery_setting_inwarehouse_bn_code"
                android:layout_width="0dp"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/grocery_goods_name"></TextView>
            <EditText
                android:id="@+id/activity_grocery_setting_inwarehouse_ed_goods_name"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/activity_grocery_setting_inwarehouse_bn_goods_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/grocery_goods_brand"></TextView>
            <EditText
                android:id="@+id/activity_grocery_setting_inwarehouse_ed_goods_brand"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/activity_grocery_setting_inwarehouse_bn_goods_brand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/grocery_goods_type"></TextView>
            <EditText
                android:id="@+id/activity_grocery_setting_inwarehouse_ed_goods_type"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/activity_grocery_setting_inwarehouse_bn_goods_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:text="@string/grocery_goods_type_histoy"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/grocery_goods_size"></TextView>
            <EditText
                android:id="@+id/activity_grocery_setting_inwarehouse_ed_goods_size"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/activity_grocery_setting_inwarehouse_bn_goods_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:text="@string/grocery_goods_size"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/grocery_goods_date"></TextView>
            <EditText
                android:id="@+id/activity_grocery_setting_inwarehouse_ed_goods_date"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/activity_grocery_setting_inwarehouse_bn_goods_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="日期"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/grocery_in_date"></TextView>
            <EditText
                android:id="@+id/activity_grocery_setting_inwarehouse_ed_in_date"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textSize="16sp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/activity_grocery_setting_inwarehouse_bn_in_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/grocery_in_numb"></TextView>
            <EditText
                android:id="@+id/activity_grocery_setting_inwarehouse_ed_in_numb"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:inputType="number"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/activity_grocery_setting_inwarehouse_bn_in_numb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/grocery_remark"></TextView>
            <EditText
                android:id="@+id/activity_grocery_setting_inwarehouse_ed_remark"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/activity_grocery_setting_inwarehouse_bn_remark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:layout_weight="1"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/activity_grocery_setting_inwarehouse_bn_add"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/add"
                android:visibility="invisible"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/activity_grocery_setting_inwarehouse_bn_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:text="@string/submit"
                android:layout_weight="1"/>

        </TableRow>
    </TableLayout>
</ScrollView>
</LinearLayout>
