<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="48dp"
    android:id="@+id/order_main_popup_dialog_item_layout_ll"
    android:orientation="horizontal">
   <TextView
       android:id="@+id/order_main_bottom_rc_item_tv"
       android:layout_width="0dp"
       android:layout_weight="60"
       android:layout_height="wrap_content"
       android:textSize="18sp"
       android:textColor="#000"
       android:text="个人收入证明模板保留所有权利"/>
   <LinearLayout
       android:layout_width="0dp"
       android:layout_weight="40"
       android:layout_marginLeft="4dp"
       android:layout_height="match_parent"
       android:layout_gravity="right"
       android:gravity="center"
       android:orientation="horizontal"
       >
      <Button
          android:id="@+id/order_main_bottom_rc_item_bn_minus"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginRight="6dp"
          android:text="-"/>
      <TextView
          android:id="@+id/order_main_bottom_rc_item_bn_num_tv"
          android:layout_width="40dp"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textColor="#000"
          android:textSize="18sp"
          android:text="1"
          />
      <Button
          android:id="@+id/order_main_bottom_rc_item_bn_add"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginLeft="6dp"
          android:text="+"/>
   </LinearLayout>

</LinearLayout>